<%= form_for @event, :html => {:class => 'form'} do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :timestamp, :class => 'control-label' %>
    <%= f.text_field :timestamp, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :sensor_id, :class => 'control-label' %>
    <%= f.collection_select :sensor_id, Sensor.all, :id, :name, {:include_blank => true}, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :species_id, :class => 'control-label' %><br>
    <%= f.collection_select :species_id, Species.all, :id, :name, {:include_blank => true}, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :sex_id, :class => 'control-label' %><br>
    <%= f.collection_select :sex_id, Sex.all, :id, :name, {:include_blank => true}, :class => 'form-control' %>
  </div>
<!--  <div class="form-group">
    <%= f.label :precipitation_id, :class => 'control-label' %><br>
    <%= f.collection_select :precipitation_id, Precipitation.all, :id, :timestamp, {:include_blank => true}, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :temperature_id, :class => 'control-label' %><br>
    <%= f.collection_select :temperature_id, Temperature.all, :id, :date, {:include_blank => true}, :class => 'form-control' %>
  </div>-->
  <div class="form-group">
    <%= f.label :event_type_id, :class => 'control-label' %><br>
    <%= f.collection_select :event_type_id, EventType.all, :id, :name, {:include_blank => true}, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image_id, :class => 'control-label' %><br>
    <%= f.collection_select :image_id, Image.all, :id, :filename, {:include_blank => true}, :class => 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
